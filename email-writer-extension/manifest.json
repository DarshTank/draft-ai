{
  "manifest_version": 3,
  "name": "Draft AI - Email Writer Assistant",
  "version": "1.0.0",
  "description": "AI powerd email reply assistant",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*", "*://mail.google.com/*", "*://*.onrender.com/*"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  }
}
